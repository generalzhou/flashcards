<div class="container">
<h4><%= session[:last_card_status] || "" %></h4>


<h3 class='show_card'><%= current_card.question %></h3>


<form class="show_card" action="/flashcards/deck/card/" method="post">
  <input type="hidden" name="current_card_id" value="<%= current_card.id %>">
  <input type="text" name="guess">
  <input type="submit" value="submit">
</form>
<div class="hint">
	<button>Hint</button>
	<p style="display: none"><%=current_card.answer[0..1]%></p>
	</div>
</div>

